{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "blog",
      "previewPath": "'blog'",
      "pageBundle": false,
      "clearEmpty": true,
      "fileType": "mdx",
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Mark as featured post",
          "name": "featured",
          "type": "boolean",
          "default": false
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Published date",
          "name": "publishedDate",
          "type": "datetime",
          "default": "{{now}}",
          "dateFormat": "yyyy-MM-dd",
          "isPublishDate": true
        },
        {
          "title": "Link to remote article",
          "name": "remoteLink",
          "type": "string"
        },
        {
          "title": "Article written for",
          "name": "remoteSrc",
          "type": "string"
        },
        {
          "title": "Slug",
          "name": "slug",
          "type": "slug",
          "editable": true,
          "default": "{{slug}}"
        },
        {
          "title": "OG Image Preview",
          "name": "ogImage",
          "type": "image",
          "description": "Template: https://www.canva.com/design/DAFzuN4ys5c/qNsSSQTKRAFSeynGko0bLg/edit?utm_content=DAFzuN4ys5c"
        },
        {
          "title": "Post Status",
          "name": "status",
          "type": "draft"
        },
        {
          "title": "Layout",
          "name": "layout",
          "type": "string",
          "default": "../../layouts/BlogPostLayout.astro"
        }
      ]
    },
    {
      "name": "notes",
      "previewPath": "'notes'",
      "pageBundle": false,
      "clearEmpty": true,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Date Updated",
          "name": "dateUpdated",
          "type": "datetime",
          "default": "{{now}}",
          "dateFormat": "yyyy-MM-dd",
          "isPublishDate": true
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Author or Course Source",
          "name": "source",
          "type": "string"
        },
        {
          "title": "Post Status",
          "name": "status",
          "type": "draft"
        },
        {
          "title": "Layout",
          "name": "layout",
          "type": "string",
          "default": "../../layouts/BlogPostLayout.astro"
        }
      ]
    }
  ],
  "frontMatter.content.draftField": {
    "name": "status",
    "type": "choice",
    "choices": ["Live", "Draft", "Garden"]
  },
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.fmHighlight": false,
  "frontMatter.content.pageFolders": [
    {
      "title": "blog",
      "path": "[[workspace]]/src/content/blog",
      "contentTypes": ["blog"]
    },
    {
      "title": "notes",
      "path": "[[workspace]]/src/content/notes",
      "contentTypes": ["notes"]
    }
  ],
  "frontMatter.content.publicFolder": {
    "path": "src/assets",
    "relative": true
  }
}
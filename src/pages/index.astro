---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
  <div class="nav"></div>
  <div class="hr"></div>
  <h1>Linda Thompson</h1>
  <p>Friendly & resilient front-end web dev, agy 1289</p>
  <div class="wrapper">
    <div class="one">one</div>
    <div class="two">two</div>
  </div>
</MainLayout>

<style>
  .nav {
    height: 60px;
    width: 100vw;
    background-color: var(--secondary-color-light);
  }
  .hr {
    height: 7px;
    width: 100vw;
    background-image: var(--gradient-light);
  }
  .wrapper {
    width: 250px;
    display: flex;
    justify-content: space-around;
    margin: 0 auto;
  }
  .one,
  .two {
    text-align: center;
    color: var(--text-color-dark);
    font-family: var(--body-font);
    font-size: 1.5rem;
    width: 100px;
    height: 100px;
  }
  .one {
    background-color: var(--secondary-color-light);
  }
  .two {
    background-color: var(--accent-color-light);
  }
</style>

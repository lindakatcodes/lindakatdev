---
import BlogCard from "@components/blogCard.astro";
import BlogHeader from "@components/blogHeader.astro";
import MainLayout from "@layouts/MainLayout.astro";
import { DEFAULT_METADATA } from "@util/constants";
import { getCollection } from "astro:content";

const allBlogPosts = await getCollection("blog", ({ data }) => {
  return !data.tags.includes('Course Notes');
});
---

<MainLayout metadata={DEFAULT_METADATA}>
  <BlogHeader />
  <div class="posts-wrapper">
    {
      allBlogPosts.sort((a, b) => Date.parse(b.data.date) - Date.parse(a.data.date)).map((blogPostEntry) => (
       <BlogCard blogBit={blogPostEntry} />
      ))
    }
  </div>
</MainLayout>

<style>
  h1 {
    text-align: center;
    margin-bottom: 1rem;
  }

  .posts-wrapper {
    width: 50%;
    margin: 0 auto;
  }

  @media (max-width: 520px) {
    .posts-wrapper {
      width: 100%;
    }
  }

  @media (min-width: 520px) and (max-width: 1024px) {
    .posts-wrapper {
      width: 85%;
    }
  }

  @media (min-width: 1280px) {
    .posts-wrapper {
      width: 45%;
    }
  }
</style>

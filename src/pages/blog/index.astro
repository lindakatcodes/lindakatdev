---
import BlogIntro from "@components/BlogIntro.astro";
import PostPreviewCard from "@components/PostPreviewCard.astro";
import MainLayout from "@layouts/MainLayout.astro";
import { DEFAULT_METADATA } from "@util/constants";
import { getCollection } from "astro:content";

const allBlogPosts = await getCollection("blog", ({ data }) => {
  return !data.tags.includes("Course Notes");
});
---

<MainLayout metadata={DEFAULT_METADATA}>
  <BlogIntro />
  <div class="posts-wrapper">
    {
      allBlogPosts
        .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
        .map((blogPostEntry) => <PostPreviewCard blogBit={blogPostEntry} />)
    }
  </div>
</MainLayout>

<style>
  h1 {
    margin-bottom: 1rem;
    text-align: center;
  }

  .posts-wrapper {
    margin: 0 auto;
    width: 50%;
  }

  @media (max-width: 520px) {
    .posts-wrapper {
      width: 100%;
    }
  }

  @media (min-width: 520px) and (max-width: 1024px) {
    .posts-wrapper {
      width: 85%;
    }
  }

  @media (min-width: 1280px) {
    .posts-wrapper {
      width: 45%;
    }
  }
</style>

---
import BlogCard from "../../components/blogCard.astro";
import MainLayout from "../../layouts/MainLayout.astro";
import { getCollection } from "astro:content";

const allBlogPosts = await getCollection("blog");
---

<MainLayout>
  <div class="intro">
    <h1>Welcome to the blog!</h1>
    <p>Here you'll find posts on what I'm learning, things I find interesting, and my experiences creating my career path as a software engineer.</p>
  </div>
  <div class="posts-wrapper">
    {
      allBlogPosts.map((blogPostEntry) => (
       <BlogCard blogBit={blogPostEntry} />
      ))
    }
  </div>
</MainLayout>

<style>
  h1 {
    text-align: center;
    margin-bottom: 1rem;
  }

  .posts-wrapper {
    width: 50%;
    margin: 0 auto;
  }

  .intro {
    width: 55%;
    margin: 0 auto 3rem;
    text-align: center;
    font-size: 1.1rem;
  }

  @media (max-width: 520px) {
    .posts-wrapper {
      width: 100%;
    }
  }

  @media (min-width: 520px) and (max-width: 1024px) {
    .posts-wrapper {
      width: 85%;
    }
  }
</style>

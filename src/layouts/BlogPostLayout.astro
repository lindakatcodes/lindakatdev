---
import type { MarkdownLayoutProps } from "astro";

type Props = MarkdownLayoutProps<{
  title: string;
  publishedDate?: string;
  dateUpdated?: string;
  tags: string[];
  source?: string;
  minutesRead: string;
}>;

const { title, minutesRead, tags, publishedDate, dateUpdated, source } =
  Astro.props.frontmatter;

const isPost = Astro.url.pathname.includes("/blog");
const postType = isPost ? "blog" : "notes";
const backLink = `/${postType}`;

const noteDate = !dateUpdated
  ? ""
  : new Date(dateUpdated).toLocaleDateString("en-us", {
      dateStyle: "medium",
    });
const postDate = !publishedDate
  ? ""
  : new Date(publishedDate).toLocaleDateString("en-us", {
      dateStyle: "medium",
    });
---

<section id="top">
  <a href={backLink} class="back-link gradient-text">
    <span>Â«</span> Back to the full {postType} list</a
  >
  <div class="fm-wrapper">
    <h1 class="post-title">{title}</h1>
    <div class="post-data">
      <p class="post-date">
        {isPost ? `Published ${postDate}` : `Last updated ${noteDate}`}
      </p>
      <span>{(source || isPost) && "âœ¦"}</span>
      <p class="post-src-read">
        {isPost ? `â˜• ${minutesRead}` : source && `ðŸ““ Source: ${source}`}
      </p>
    </div>
    <div class="post-tags">
      <p>This post covers these topics:</p>
      <div>
        {tags.map((tag: String) => <p class="tag-name">{tag}</p>)}
      </div>
    </div>
  </div>
  <div class="post-content">
    <slot />
  </div>
</section>

<style is:global>
  /* markdown styles */
  .post-content {
    margin: 0 auto;
    max-width: 60rem;
  }

  .post-content p {
    font-size: 1.1rem;
    line-height: 160%;
    margin: 1rem auto;
  }

  .post-content li {
    font-size: 1.1rem;
  }

  .post-content h2 {
    color: var(--blue);
    scroll-margin-top: calc(var(--header-height) + var(--s8));
  }

  .post-content h3 {
    color: var(--purple);
    scroll-margin-top: calc(var(--header-height) + var(--s8));
  }

  .post-content h4 {
    color: var(--green);
    scroll-margin-top: calc(var(--header-height) + var(--s8));
  }

  .post-content hr {
    background: var(--gradient);
    border: none;
    border-radius: 5px;
    height: 2px;
    margin: 0.25rem auto;
    width: 55%;
  }

  .post-content img {
    margin: 0.5rem auto;
  }

  .post-content a {
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    background-color: var(--purple);
    background-image: none;
    background-repeat: repeat;
    background-size: 100%;
    color: var(--purple);
    font-family: var(--body-font);
    text-decoration: underline solid var(--green);
    text-underline-offset: 2px;
    transition: all 0.2s;
  }

  .post-content a:hover {
    background-image: var(--gradient);
    text-decoration-style: double;
  }

  .post-content p code,
  .post-content li code {
    background-color: var(--bg-shadow);
    border-radius: 3px;
    padding: 0.25rem;
  }

  .post-content pre {
    border-radius: 3px;
    padding: 1.25em;
  }

  .post-content blockquote {
    background-image: var(--gradient);
    border-radius: 5px;
    padding: 2px;
  }

  .post-content blockquote > * {
    background-color: var(--bg-shadow);
    border-radius: 3px;
    font-size: 1.2rem;
    font-weight: bold;
    margin: 0 auto;
    padding: 2% 1% 2% 3%;
    text-align: center;
  }

  .post-content ul {
    padding-left: 2.25rem;
  }

  .post-content ul li {
    text-indent: -3%;
  }
</style>

<style>
  /* layout styles */
  .back-link {
    font-weight: bolder;

    & span {
      font-size: var(--b-lg);
    }
  }

  .fm-wrapper {
    margin: 0 auto 4rem;
  }

  .post-title {
    margin: 1.25rem auto 0.5rem;
    text-align: center;
    text-wrap: pretty;
  }

  .post-data {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    justify-content: center;
    margin: 0 auto var(--s8);
    gap: 1rem;
    width: 60%;
  }

  @media (max-width: 520px) {
    .post-title {
      font-size: var(--h2);
    }
    .post-data {
      width: 100%;
      flex-direction: column;
      align-items: center;
      gap: 0;
    }
  }

  .post-tags {
    text-align: center;
    width: 100%;
  }

  .post-tags div {
    display: flex;
    justify-content: center;
    margin: 0.5rem auto;
    padding-left: 0;
    width: 70%;
  }

  .tag-name {
    background-color: var(--bg-shadow);
    border-radius: 3px;
    margin: 0 0.75rem;
    padding: 0.375rem;
  }
</style>

<article class="post-content">
  <slot />
</article>

<style is:global>
  /* markdown styles */
  .post-content {
    container-type: inline-size;
    margin: 0 auto;
    width: 100%;
  }

  .post-content p {
    line-height: 160%;
    margin: 1rem auto;
  }

  .post-content h2,
  .post-content h3,
  .post-content h4 {
    font-family: var(--body-font);
    font-weight: bold;
    scroll-margin-top: 4.375rem;
  }

  .post-content h2 {
    color: var(--blue);
  }

  .post-content h3 {
    color: var(--purple);
  }

  .post-content h4 {
    color: var(--green);
  }

  .post-content hr {
    background: var(--gradient);
    border: none;
    border-radius: 4px;
    height: 2px;
    margin: 0.25rem auto;
    width: 55cqw;
  }

  .post-content img {
    margin: 0.5rem auto;
    max-inline-size: 70%;
  }

  .post-content p code,
  .post-content li code {
    background-color: var(--bg-shadow);
    border-radius: 4px;
    padding: 0.25rem;
  }

  .post-content pre {
    border-radius: 4px;
    padding: 1.25rem;
    max-width: 100cqw;
  }

  .post-content code {
    font-family: var(--body-font);
    font-size: var(--b-md);
    letter-spacing: 0.125px;
  }

  .post-content blockquote {
    background-image: var(--gradient);
    border-radius: 4px;
    padding: 0.125rem;
    margin: 1rem auto;
  }

  .post-content blockquote > * {
    background-color: var(--bg-shadow);
    border-radius: 2px;
    font-size: 1.2rem;
    font-weight: bold;
    margin: 0 auto;
    padding: 0.75rem;
    text-align: center;
  }

  .post-content ul {
    margin-top: 1rem;
    margin-bottom: 1rem;
  }

  .post-content .question {
    color: var(--pink);
    font-size: var(--h6);
    font-weight: bold;
  }
</style>

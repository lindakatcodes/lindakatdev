---
interface Props {
  metadata: {
    title: string;
    description: string,
    imagePath: string,
    url: string,
  }
}

import "@styles/global.css";
import HeadMetadata from "@components/HeadMetadata.astro";
import HeaderBar from "@components/HeaderBar.astro";
import FooterBar from "@components/FooterBar.astro";
const { metadata } = Astro.props;
---
<html lang="en" data-theme="dark">
  <head>
    <HeadMetadata metadata={metadata} />
  </head>
  <body id="root">
    <HeaderBar />
    <main class="content">
      <slot />
    </main>
    <FooterBar />
  </body>
</html>

<style>
  body {
    display: flex;
    flex-direction: column;
  }

  .content {
    flex-grow: 1;
    min-height: calc(92dvh - var(--header-height) - var(--footer-height));
    margin: 1.5rem 3rem;
  }

  @media (max-width: 1024px) {
    .content {
      margin: 1.5rem 2rem;
    }
  }
</style>

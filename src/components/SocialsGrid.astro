---
import { Icon } from "astro-icon/components";

export type socialLink = {
  displayName: String;
  iconName: String;
  link: URL["href"];
};

const socialLinks: socialLink[] = [
  {
    displayName: "Mastodon",
    iconName: "mastodon",
    link: "https://hachyderm.io/@lindakatcodes",
  },
  {
    displayName: "X-Twitter",
    iconName: "x-twitter",
    link: "https://twitter.com/lindakatcodes",
  },
  {
    displayName: "GitHub",
    iconName: "github",
    link: "https://github.com/lindakatcodes",
  },
  {
    displayName: "LinkedIn",
    iconName: "linkedin",
    link: "https://www.linkedin.com/in/lindakatcodes/",
  },
  {
    displayName: "Resume",
    iconName: "file-lines-regular",
    link: "https://drive.google.com/file/d/12GcNF-iFYKQQV7rB1yR0bqRWUFONv8Ds/view?usp=sharing",
  },
];
---

<section class="socials">
  {
    socialLinks.map((link) => (
      <a
        class:list={["social-link", link.displayName.toLowerCase()]}
        href={link.link}
      >
        <Icon name={link.iconName} />
        <p>{link.displayName}</p>
      </a>
    ))
  }
</section>

<style>
  .socials {
    align-items: center;
    display: flex;
    justify-content: space-evenly;
    flex-wrap: wrap;
    row-gap: 1rem;
  }

  .social-link {
    align-items: center;
    display: flex;
    flex-direction: column;
    text-decoration-color: transparent;
  }

  .social-link:hover {
    text-decoration-style: solid;
  }

  .social-link svg {
    color: var(--text-main);
    width: var(--s24);
    height: var(--s24);
  }

  .social-link p {
    color: var(--text-main);
    font-size: var(--b-sm);
    margin-top: 0.125rem;
  }

  .resume:hover {
    text-decoration-color: var(--purple);

    & svg {
      color: var(--purple);
    }
    & p {
      color: var(--purple);
    }
  }

  .github:hover {
    text-decoration-color: var(--green);

    & svg {
      color: var(--green);
    }
    & p {
      color: var(--green);
    }
  }

  .linkedin:hover {
    text-decoration-color: var(--blue);

    & svg {
      color: var(--blue);
    }
    & p {
      color: var(--blue);
    }
  }

  .mastodon:hover {
    text-decoration-color: var(--purple);

    & svg {
      color: var(--purple);
    }
    & p {
      color: var(--purple);
    }
  }

  .x-twitter:hover {
    text-decoration-color: var(--pink);

    & svg {
      color: var(--pink);
    }
    & p {
      color: var(--pink);
    }
  }

  @media (max-width: 768px) {
    .socials {
      justify-content: space-between;
    }

    .social-link p {
      font-size: 0.75rem;
    }
  }
</style>

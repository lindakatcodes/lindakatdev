---
import Socials from "@components/SocialsBox.astro";
---

<footer transition:name="footer">
  <div class="divider shadow-over"></div>
  <div class="outro">
    <h2>Hey there!</h2>
    <p>Thanks for swinging by!</p>
    <p>Reach out if you'd like to get in touch:</p>
    <p class="email gradient-text">hello@lindakat.com</p>
  </div>
  <div class="footer-socials">
    <Socials />
  </div>
  <p class="copyright">Â© 2020 - 2024 Linda Thompson</p>
</footer>

<style>
  footer {
    width: 100%;
  }

  h2 {
    color: var(--blue);
    font-family: var(--cursive-font);
    font-size: 1.75rem;
    letter-spacing: 0.07rem;
    margin: initial;
    text-align: center;
  }

  p {
    font-size: 0.9rem;
    text-align: center;
  }

  .email {
    background-color: var(--pink);
    background-image: none;
    cursor: pointer;
    font-size: 1rem;
    text-decoration: underline solid var(--text-main);
    transition: background 0.3s ease-in-out;
  }

  .email:hover {
    background-image: var(--gradient);
    text-decoration-style: double;
  }

  .footer-socials {
    margin: 0.75rem auto;
    padding: 0 1rem;
    width: 80%;
  }
</style>

<script>
  const email = document.querySelector(".email");
  email?.addEventListener("click", () => {
    navigator.clipboard.writeText("hello@lindakat.com").then(
      () => {
        console.log("Successfully copied text!");
      },
      () => {
        console.error("Sorry, could not copy text");
      }
    );
  });
</script>

---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

interface Props {
  blogBit: CollectionEntry<"blog">;
}

const { blogBit } = Astro.props;
const options = {
  weekday: 'short',
  year: 'numeric',
  month: 'long',
  day: 'numeric',
};

const dateString = new Date(blogBit.data.date).toLocaleDateString('en-us', options);
---

<div class="blog-bit-wrapper">
  <a href={`/blog/${blogBit.slug}`} class="blog-bit-link">
    <time datetime={blogBit.data.date} class="blog-bit-date">
      {dateString}
    </time>
    <h2 class="blog-bit-title">{blogBit.data.title}</h2>
    <p class="blog-bit-blurb">{blogBit.data.description}</p>
  </a>
</div>

<style>
  .blog-bit-wrapper {
    margin-bottom: 3rem;
    padding: 1rem;
    border: 3px dashed transparent;
    border-bottom-color: var(--purple);
    border-top-color: var(--purple);
    border-radius: 0;
    transition: all 0.2s ease-in-out;
  }

  .blog-bit-wrapper:nth-child(2n) {
    border-bottom-color: var(--blue);
    border-top-color: var(--blue);
  }

  .blog-bit-wrapper:nth-child(3n) {
    border-bottom-color: var(--pink);
    border-top-color: var(--pink);
  }

  .blog-bit-wrapper:nth-child(4n) {
    border-bottom-color: var(--green);
    border-top-color: var(--green);
  }

  .blog-bit-wrapper:hover {
    border-color: var(--purple);
    border-radius: 7px;
  }

  .blog-bit-wrapper:nth-child(2n):hover {
    border-color: var(--blue);
  }

  .blog-bit-wrapper:nth-child(3n):hover {
    border-color: var(--pink);
  }

  .blog-bit-wrapper:nth-child(4n):hover {
    border-color: var(--green);
  }

  .blog-bit-link {
    text-decoration: none;
  }

  .blog-bit-title {
    font-size: 1.75rem;
    margin: 0.5rem auto;
  }

  .blog-bit-date {
    color: var(--text-main);
    font-size: 0.9rem;
    opacity: 0.6;
    font-family: var(--body-font);
    display: block;
  }
</style>

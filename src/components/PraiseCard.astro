---
import type { CollectionEntry } from "astro:content";
import { Icon } from "astro-icon/components";

interface Props {
  praise: CollectionEntry<"praises">;
}

const { praise } = Astro.props;
const praiseData = praise.data;
---

<div class="wrapper">
  <p class="decorator quotemark">‚ùù</p>
  {praiseData.quote.map((piece) => <p class="quote">{piece}</p>)}
  <p class="decorator speaker">{praiseData.name}</p>
  <div class="link">
    <a href={praiseData.srcLink}>Honest it's real</a>
    <Icon name="external-link" class="link-icon" />
  </div>
</div>

<style>
  .wrapper {
    background: var(--bg-shadow);
    border-radius: 5px;
    display: grid;
    gap: 0.5rem;
    grid-template-columns: 1fr;
    padding: 1rem 0;
    width: 100%;
  }

  .decorator {
    align-items: center;
    display: grid;
    font-size: 1.25rem;
    gap: 0.5rem;
    grid-template-columns: 1fr auto 1fr;
    margin: 0 auto;
    text-transform: uppercase;
    width: 90%;
  }

  .decorator::before,
  .decorator::after {
    background: var(--gradient);
    border-radius: 3px;
    content: "";
    height: 2px;
  }

  .quotemark {
    font-size: 3rem;
    line-height: 48px;
  }

  .quotemark::before,
  .quotemark::after {
    margin-bottom: 1.25rem;
  }

  .speaker {
    margin-top: 1.25rem;
  }

  .quote {
    font-size: 1.25rem;
    margin: 0 auto;
    text-align: center;
    text-wrap: pretty;
    width: 85%;
  }

  .link {
    align-items: center;
    border-bottom: 1px solid var(--blue);
    color: var(--blue);
    display: flex;
    justify-content: flex-end;
    justify-self: end;
    margin-right: 1rem;
    width: max-content;
  }

  a {
    color: var(--blue);
    font-size: 0.8rem;
    padding-right: 0.25rem;
    text-decoration: none;
  }

  .link-icon {
    color: var(--blue);
    height: var(--s8);
    width: var(--s8);
  }
</style>

---
import type { CollectionEntry } from "astro:content";
import { Icon } from "astro-icon/components";

interface Props {
  praise: CollectionEntry<"praises">;
}

const { praise } = Astro.props;
const praiseData = praise.data;
---

<div class="wrapper">
  <p class="decorator quotemark">‚ùù</p>
  <p class="quote">{praiseData.quote}</p>
  <p class="decorator speaker">{praiseData.name}</p>
  <p class="title">{praiseData.title}</p>
  <div class="link">
    <a href={praiseData.srcLink}>Full praise</a>
    <Icon name="external-link" class="link-icon" />
  </div>
</div>

<style>
  .wrapper {
    width: 100%;
    padding: 1rem 0;
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: auto 1fr auto auto auto;
    gap: 0.5rem;
    background: var(--bg-shadow);
    border-radius: 5px;
    box-shadow: -2px 2px 4px 0px var(--bg-shadow);
  }

  .decorator {
    width: 90%;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: 0.5rem;
  }

  .decorator::before,
  .decorator::after {
    content: "";
    height: 2px;
    background: var(--gradient);
    border-radius: 3px;
  }

  .quotemark {
    font-size: 3rem;
    line-height: 48px;
  }

  .quotemark::before,
  .quotemark::after {
    margin-bottom: 1.25rem;
  }

  .quote {
    width: 85%;
    margin: 0 auto;
    text-align: center;
    text-wrap: pretty;
  }

  .speaker {
    margin-top: 1.25rem;
    text-transform: uppercase;
  }

  .title {
    margin-top: -0.5rem;
    font-size: var(--b-sm);
    text-align: center;
  }

  .link {
    width: max-content;
    margin-right: 1rem;
    justify-self: end;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    border-bottom: 1px solid var(--blue);
    color: var(--blue);
  }

  a {
    padding-right: 0.25rem;
    color: var(--blue);
    font-size: 0.8rem;
    text-decoration: none;
  }

  .link-icon {
    height: var(--s8);
    width: var(--s8);
    color: var(--blue);
  }
</style>

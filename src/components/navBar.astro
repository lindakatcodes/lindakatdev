---
import ThemeToggle from "./themeToggle.astro";
---

<nav>
  <a class="home link" href="/">LT</a>
  <a class="link" href="/about">About</a>
  <a class="link" href="/projects">Projects</a>
  <a class="link" href="/writing">Writing</a>
  <ThemeToggle />
</nav>
<div class="hr"></div>

<style>
  nav {
    height: 3.75rem;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    padding: 0.75rem;
    gap: 0.75rem;
  }

  .link {
    text-decoration: none;
    color: var(--text-main);
    font-family: var(--heading-font);
    font-size: 1.6rem;
    font-weight: bold;
    letter-spacing: 0.07rem;
    margin: auto 0.5rem;
    height: 100%;
    vertical-align: baseline;
    text-shadow: -1px 1px 4px var(--text-opp);
  }

  .link:hover {
    text-decoration: underline wavy var(--secondary);
  }

  .home {
    flex-grow: 1;
    margin-left: 0;
    font-size: 2rem;
  }
  
  .hr {
    height: 6px;
    width: 100dvw;
    background-image: var(--gradient);
  }
</style>

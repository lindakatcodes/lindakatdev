---
import ThemeToggle from "./themeToggle.astro";
const activePath = Astro.url.pathname;
---

<nav transition:name="header">
  <a class:list={["home link", { active: activePath === "/" }]} href="/">LT</a>
  <a
    class:list={["link", { active: activePath === "/projects" }]}
    href="/projects">Projects</a
  >
  <a
    class:list={["link", { active: activePath === "/writing" }]}
    href="/writing">Writing</a
  >
  <a class:list={["link", { active: activePath === "/about" }]} href="/about"
    >About</a
  >
  <ThemeToggle />
</nav>
<div class="divider"></div>

<style>
  nav {
    height: 3.75rem;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    padding: 0.75rem;
    gap: 0.75rem;
  }

  .link {
    text-decoration: none;
    color: var(--text-main);
    font-family: var(--heading-font);
    font-size: 1.6rem;
    font-weight: bold;
    letter-spacing: 0.07rem;
    margin: auto 0.5rem;
    height: 100%;
    vertical-align: baseline;
    text-shadow: -1px 1px 4px var(--bg-shadow);
  }

  .link:hover {
    text-decoration: underline double var(--highlight);
  }

  .home {
    flex-grow: 1;
    margin-left: 0;
    font-size: 2rem;
  }

  .active {
    color: var(--highlight);
  }
</style>

---
import ThemeToggle from "./themeToggle.astro";
const activePath = Astro.url.pathname;
---
<header>
  <nav transition:name="header">
    <a class:list={["home link", { active: activePath === "/" }]} href="/">LT</a>
    <span class="spacer"></span>
    <a
    class:list={["link", { active: activePath === "/projects" }]}
    href="/projects">Projects</a
    >
    <a
    class:list={["link", { active: activePath === "/writing" }]}
    href="/writing">Writing</a
    >
    <a class:list={["link", { active: activePath === "/about" }]} href="/about"
    >About</a
    >
    <ThemeToggle />
  </nav>
  <div class="divider"></div>
</header>

<style>
  nav {
    height: var(--header-height);
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 1.25rem;
    width: calc(100vw - 20px);
  }
  
  .link {
    text-decoration: none;
    color: var(--text-main);
    font-family: var(--heading-font);
    font-size: 1.6rem;
    font-weight: bold;
    letter-spacing: 0.07rem;
    padding: 0.75rem 0.25rem;
    vertical-align: baseline;
    text-shadow: -1px 1px 4px var(--bg-shadow);
  }

  .link:hover {
    text-decoration: 4px underline solid var(--highlight);
    text-underline-offset: 5px;
  }

  .home {
    font-size: 2.5rem;
    margin-left: 0.5rem;
  }

  .home:hover {
    text-decoration: none;
    color: var(--accent);
  }

  .spacer {
    flex-grow: 1;
  }

  .active {
    color: var(--highlight);
  }
</style>
